<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:fontFamily="@font/alegreya_sans_sc_bold"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:text="A" />

    <TextView
        android:id="@+id/text_label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:fontFamily="@font/alegreya_sans_sc_medium"
        android:layout_toEndOf="@id/text_icon"
        android:layout_marginStart="20dp"
        android:text="Nome" />

    <TextView
        android:id="@+id/text_label_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_label_name"
        android:textSize="16sp"
        android:fontFamily="@font/alegreya_sans_sc_medium"
        android:layout_marginStart="140dp"
        android:layout_marginTop="4dp"
        android:text="Telefone" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_label_name"
        android:layout_alignStart="@id/text_label_name"
        android:fontFamily="@font/alegreya_sans_sc"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:text="Nome contato" />

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sans_sc"
        android:layout_alignStart="@id/text_label_phone"
        android:layout_below="@id/text_label_phone"
        android:layout_marginTop="8dp"
        android:text="Telefone contato" />
</RelativeLayout>